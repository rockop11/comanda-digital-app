generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Restaurant {
  id    Int    @id @default(autoincrement()) // ID de restaurante es Int
  slug  String @unique
  name  String
  image String

  wifiId Int  @unique
  wifi   Wifi @relation(fields: [wifiId], references: [id])

  menuCategories MenuCategory[]
  users          User[]
}

model Wifi {
  id       Int    @id @default(autoincrement())
  name     String
  password String

  restaurant Restaurant?
}

model MenuCategory {
  id       Int    @id @default(autoincrement())
  category String

  restaurantId Int // Clave foránea Int
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  dishes Dish[]
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  restaurantId Int // Clave foránea Int
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
}

model Dish {
  id          Int     @id @default(autoincrement())
  name        String
  price       Float
  image       String?
  description String?

  menuCategoryId Int
  menuCategory   MenuCategory @relation(fields: [menuCategoryId], references: [id])
}
